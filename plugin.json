{
  "name": "atlas-guardrails",
  "description": "Context packing and anti-duplication guardrails",
  "version": "1.0.23",
  "author": {
    "name": "Marcus Gollahon"
  },
  "repository": "https://github.com/marcusgoll/atlas-guardrails",
  "license": "MIT",
  "mcpServers": {
    "atlas": {
      "command": "npx",
      "args": ["-y", "atlas-guardrails", "mcp"]
    }
  },
  "skills": {
    "atlas": {
      "description": "Context packing and duplicate detection for codebase tasks",
      "prompt_file": "SKILL.md",
      "invocable": true
    }
  },
  "commands": {
    "atlas-pack": {
      "description": "Generate context pack for a task",
      "prompt_file": "commands/atlas-pack.md"
    },
    "atlas-check": {
      "description": "Check for API drift",
      "prompt_file": "commands/atlas-check.md"
    },
    "atlas-duplicates": {
      "description": "Find potential duplicate code",
      "prompt_file": "commands/atlas-duplicates.md"
    }
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": { "tool_name": "Edit" },
        "hooks": [{
          "type": "command",
          "command": "npx atlas-guardrails check --silent",
          "timeout": 5000
        }]
      },
      {
        "matcher": { "tool_name": "Write" },
        "hooks": [{
          "type": "command",
          "command": "npx atlas-guardrails check --silent",
          "timeout": 5000
        }]
      }
    ]
  },
  "settings": [
    {
      "name": "ATLAS_BUDGET",
      "type": "string",
      "description": "Default character budget for context packing",
      "default": "50000"
    }
  ]
}
